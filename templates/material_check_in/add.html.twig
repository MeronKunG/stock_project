{% extends 'base2.html.twig' %}
{% block title %}Check In Material{% endblock %}
	{% block body %}
		{% for label, flashes in app.session.flashbag.all %}
			{% for flash in flashes %}
				{% if ( label == 'success' ) %}
					<div class="alert alert-success alert-dismissible fade show">
						{{ flash }}
					</div>
				{% elseif ( label == 'error' ) %}
					<div class="alert alert-danger alert-dismissible fade show">
						{{ flash }}
					</div>
				{% endif %}
			{% endfor %}
		{% endfor %}
		{{ form_start(formCheckIn, {"attr": {"id" : "material_check_in"}}) }}
		<div class="row">
			<div class="col-md-12" style="margin-top: 20px;">
				<div class="form-group">
					<label>Order No.</label>
					{{ form_widget(formCheckIn.checkInCode, {"attr": {"value": orderCode, "class" : "form-control", "readonly" : "true"}}) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group">
					<label>Warehouse Name</label>
					{{ form_widget(formCheckIn.warehouseCode, {"attr": {"class" : "form-control"}}) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group">
					<label>Ref No <a style="color: red">*</a></label>
					{{ form_widget(formCheckIn.checkInRefNo, {"attr": {"class" : "form-control"}}) }}
				</div>
			</div>
		</div>
        <div class="row">
			<div class="col-md-12">
              <div class="form-group">
                <label>Attachment <a style="color: red; font-size: 10px">* ไฟล์รูปภาพ (.jpg , .png)</a></label>
                 {{ form_widget(formCheckIn.checkInImage, {"attr": {"class" : "form-control-file"}}) }}
				  {{ form_errors(formCheckIn.checkInImage) }}
                </div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group">
					<label>หมายเหตุ</label>
					{{ form_widget(formCheckIn.checkInNote, {"attr": {"class" : "form-control"}}) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group">
					<label>Material <a style="color: red">*</a></label>
					{{ form_widget(formCheckIn.materialName, {"attr": {"class" : "form-control"}}) }}
				</div>
			</div>
		</div>

	<div class="wrapper" >
		<table id="materialTable">
			<thead>
			<tr style=" background-color: #c1d4ce;">
				<th scope="col" style=" text-align: center;">รหัส Material</th>
				<th scope="col" style=" text-align: center;">ชื่อ Material</th>
				<th scope="col" style=" text-align: center;">Quantity</th>
				<th scope="col" style=" text-align: center;">Action</th>
			</tr>
			</thead>
			<tbody>
			</tbody>
		</table>
	</div>
		<div class="col-10 col-md-10 float-right" style="padding-right: 0px; margin-bottom: 10px">
			{{ form_widget(formCheckIn.save) }}
		</div>
	</div>
			{{ form_end(formCheckIn) }}


	{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/scriptCheckin.js') }}"></script>
{% endblock %}
