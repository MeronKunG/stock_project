{% extends 'base.html.twig' %}

{% block title %}ข้อมูล Courier{% endblock %}

	{% block body %}
		{% for label, flashes in app.session.flashbag.all %}
			{% for flash in flashes %}
				{% if ( label == 'success' ) %}
					<div class="alert alert-success alert-dismissible fade show">
						{{ flash }}
					</div>
				{% elseif ( label == 'error' ) %}
					<div class="alert alert-danger alert-dismissible fade show">
						{{ flash }}
					</div>
				{% endif %}
			{% endfor %}
		{% endfor %}

		{{ form_start(formCourier, {"attr": {"id" : "courierInfo"}}) }}

		<div class="row">
			<div class="col-md-12" style="margin-top: 20px;">
				<div class="form-group">
					<label>รหัส บริษัทขนส่ง <a style="color: red">*</a></label>
					{{ form_widget(formCourier.courierCode, {"attr":  {"class" : "form-control"}}) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group">
					<label>ชื่อ บริษัทขนส่ง <a style="color: red">*</a></label>
					{{ form_widget(formCourier.courierName, {"attr": {"class" : "form-control"}}) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group">
					<label>อักษรย่อ <a style="color: red; font-size: 10px">* กำหนดไม่เกิน 6 ตัวอักษร</a></label>
					{{ form_widget(formCourier.courierPrefix, {"attr": {"class" : "form-control", "maxlength" : "6"}}) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group">
					<label>ขนาดพัสดุ ที่รับได้สูงสุด <a style="color: red">*</a></label>
					{{ form_widget(formCourier.sizeCode, {"attr": {"class" : "form-control"}}) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12" style="margin-bottom: 10px;">
				<div class="form-group">
					{{ form_widget(formCourier.save) }}
				</div>
			</div>
		</div>
		{{ form_end(formCourier) }}

	{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/scriptCheckin.js') }}"></script>
{% endblock %}
